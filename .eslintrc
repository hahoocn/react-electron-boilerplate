{
   "extends": "airbnb",
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "import"
    ],
    "rules": {
        "comma-dangle": ["warn", "only-multiline"],
        "indent": [2, 2, {"SwitchCase": 1}],
        "no-console": 0,
        "no-alert": 0,
        "global-require": 0,
        "react/wrap-multilines": 0,
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "react/forbid-prop-types": 0,
        "object-shorthand": [2, "always", { "avoidQuotes": false }],
    },
    "globals": {
      "window": true
    }
}
